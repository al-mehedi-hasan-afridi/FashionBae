<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignInActivity"
    android:background="#F4BC1C">


    <TextView
        android:id="@+id/SignUp_Txt"
        android:layout_width="216dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="524dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sName"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="405dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter Username"
        android:textColorHint="@color/DimGray"
        android:padding="15dp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="424dp"

        android:drawableStart="@drawable/custom_username_vector"
        android:drawablePadding="10dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/sEmail"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="326dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter Email"
        android:textColorHint="@color/DimGray"
        android:padding="15dp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="424dp"

        android:drawableStart="@drawable/custom_email_vector"
        android:drawablePadding="10dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/sPass"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="252dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter Password"
        android:textColorHint="@color/DimGray"
        android:inputType="textPassword"
        android:padding="15dp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="424dp"

        android:drawableStart="@drawable/custom_password_vector"
        android:drawablePadding="10dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="139dp"
        android:background="@color/black"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="108dp"
        android:text="Have an account?"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAsLogInButton"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="108dp"
        android:text="Login Here"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/backbutton_vector"/>


</RelativeLayout>