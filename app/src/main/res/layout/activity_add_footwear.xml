<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddFootwear"
    android:background="#F4BC1C">

    <EditText
        android:id="@+id/brandName"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="455dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter Brand Name"
        android:padding="15dp"
        android:textColor="@color/white"

        android:textColorHint="@color/DimGray"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="424dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="385dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter Price"
        android:padding="15dp"
        android:textColor="@color/white"

        android:textColorHint="@color/DimGray"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="424dp" />

    <EditText
        android:id="@+id/size"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="313dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter Size"
        android:padding="15dp"
        android:textColor="@color/white"

        android:textColorHint="@color/DimGray"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="424dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="440dp">

        <ImageView
            android:id="@+id/addFootwearPic"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="160dp"
            android:src="@drawable/add_image_vector_black" />

    </RelativeLayout>

    <Button
        android:id="@+id/addFootwear"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="89dp"
        android:background="@color/black"
        android:text=" Add Footwear"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/backbutton_addFootweartoShophome"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:padding="5dp"
        android:src="@drawable/backbutton_vector" />



</RelativeLayout>